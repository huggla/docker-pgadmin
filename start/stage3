# set -e +a +m +s +i -f
# firstrun
# VAR_*
# ---------------------------------------------------------

if [ "$firstrun" == "true" ]
then
   logFile="$(echo "$VAR_param_LOG_FILE" | /usr/bin/tr -d "'")"
   if [ -n "$logFile" ]
   then
      /bin/chmod g+w "$logFile"
   fi
   if [ ! -s "$VAR_CONFIG_FILE" ]
   then
      set | grep "VAR_param" >> "$VAR_CONFIG_FILE"
   fi
   /bin/ln -fs "$VAR_CONFIG_FILE" /usr/lib/python2.7/site-packages/pgadmin4/config_local.py
fi
